{
  "manifest_version": 3,
  "name": "RepoSaviour",
  "version": "1.0.0",
  "description": "Track GitHub repositories and identify incomplete ones",
  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "RepoSaviour"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ]
}
